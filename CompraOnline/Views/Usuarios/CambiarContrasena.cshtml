@model CompraOnline.Models.Usuarios.CambioPassword

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">
        <i class="bi bi-key"></i> Cambiar Contraseña
    </h1>
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="card-title text-center">Cambio de Contraseña</h5>
        </div>
        <div class="card-body">
            <form asp-action="CambiarContrasena" method="post">
                @Html.AntiForgeryToken()
                <section asp-validation-summary="ModelOnly" class="text-danger mb-3"></section>
                <input type="hidden" asp-for="idUsuario" />
                <div class="form-group mb-3 text-center">
                    <label asp-for="ContrasenaActual" class="control-label"></label>
                    <div class="input-group justify-content-center">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="ContrasenaActual" class="form-control text-center" type="password" placeholder="Ingrese su contraseña actual" style="max-width: 300px;" />
                    </div>
                    <span asp-validation-for="ContrasenaActual" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 text-center">
                    <label asp-for="NuevaContrasena" class="control-label"></label>
                    <div class="input-group justify-content-center">
                        <span class="input-group-text"><i class="bi bi-key"></i></span>
                        <input asp-for="NuevaContrasena" class="form-control text-center" type="password" placeholder="Ingrese la nueva contraseña" style="max-width: 300px;" />
                    </div>
                    <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 text-center">
                    <label asp-for="ConfirmarContrasena" class="control-label"></label>
                    <div class="input-group justify-content-center">
                        <span class="input-group-text"><i class="bi bi-check2-circle"></i></span>
                        <input asp-for="ConfirmarContrasena" class="form-control text-center" type="password" placeholder="Confirme la nueva contraseña" style="max-width: 300px;" />
                    </div>
                    <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center mb-3">
                    <input type="submit" value="Actualizar Contraseña" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-danger">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

        <script type="text/javascript">
            $(document).ready(function () {
                var errorMessage = '@ViewData["ErrorMessage"]';
                if (errorMessage) {
                    alert(errorMessage);
                }
            });
        </script>
}
