@model CompraOnline.Models.Usuarios.Usuario

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 50vh;">
    <div class="card shadow-lg border-0 rounded" style="width: 100%; max-width: 400px;">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="card-title">
                <i class="bi bi-person-circle"></i> Iniciar Sesión
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Login">
                <section asp-validation-summary="All" class="text-danger mb-3"></section>
                <div class="form-group mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                        </div>
                        <input asp-for="username" class="form-control form-control-sm text-center" placeholder="Ingrese su usuario" />
                    </div>
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        </div>
                        <input asp-for="password" class="form-control form-control-sm text-center" type="password" placeholder="Ingrese su contraseña" />
                    </div>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Volver al inicio
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script>

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    alert('@Html.Raw(TempData["ErrorMessage"])');
            </text>
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
