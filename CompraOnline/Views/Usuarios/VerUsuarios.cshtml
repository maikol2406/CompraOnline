@model IEnumerable<CompraOnline.Models.Usuarios.Usuario>

@{
    ViewData["Title"] = "Ver Usuarios";
}

<section class="container mt-4">
    <h1 class="text-center mb-4">Ver Usuarios</h1>
    <section class="text-center mb-3">
        <a asp-action="Registro" class="btn btn-success btn-lg">
            <i class="bi bi-person-plus-fill"></i> Crear Nuevo Usuario
        </a>
    </section>
    <section class="row">
        @foreach (var item in Model)
        {
            <section class="col-md-4 mb-3">
                <section class="card shadow-sm">
                    <section class="card-header bg-info text-white">
                        <h5 class="card-title">@item.nombreCompleto</h5>
                    </section>
                    <section class="card-body">
                        <p><strong>Username:</strong> @item.username</p>
                        <p><strong>ID Usuario:</strong> @item.idUsuario</p>
                        <p><strong>Password:</strong> ********</p>
                        <section class="d-flex justify-content-between">
                            <a href="@Url.Action("EditarUsuario", "Usuarios", new {idUsuario = @item.idUsuario})" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a href="@Url.Action("VerUsuario", "Usuarios", new {idUsuario = @item.idUsuario})" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <a href="@Url.Action("EliminarUsuario", "Usuarios", new {idUsuario = @item.idUsuario})" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </section>
                    </section>
                </section>
            </section>
        }
    </section>
    @if (TempData["Success"] != null)
    {
        <section class="alert alert-success">
            @TempData["Success"]
        </section>
    }

    @if (TempData["Error"] != null)
    {
        <section class="alert alert-danger">
            @TempData["Error"]
        </section>
    }
</section>