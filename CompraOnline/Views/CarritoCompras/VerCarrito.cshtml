@model IEnumerable<CompraOnline.Models.CarritoCompras.CarritoCompra>

@{
    ViewData["Title"] = "VerCarrito";
    List<CompraOnline.Models.Productos.Producto> productos = ViewBag.listaProductos;
    List<CompraOnline.Models.Usuarios.Usuario> usuarios = ViewBag.listaUsuarios;
}

<h1>VerCarrito</h1>


    @* <a asp-action="Create">Create New</a> *@
    @* <a href="@Url.Action("PagarPedido", "Pedidos", new { idPedido = Model.First().idPedido })" class="btn btn-primary">Pagar pedido</a> *@
    @* <a href="@Url.Action("PagarPedido", "Pedidos", new { idPedido = Model.Any() ? Model.First().idPedido : 0 })" class="btn btn-primary">Pagar pedido</a> *@
    @if (Model.Any())
    {
        <p>
            <a href="@Url.Action("PagarPedido", "Pedidos", new { idPedido = Model.First().idPedido })" class="btn btn-primary">Pagar pedido</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.idCarrito)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.idUsuario)
                    </th>
                    <th>
                        Nombre del cliente
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.idPedido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.idProducto)
                    </th>
                    <th>
                        Producto
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.montoTotal)
                    </th>
                    @* <th></th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.idCarrito)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.idUsuario)
                        </td>
                        <td>
                            @foreach (var item2 in usuarios)
                            {
                                if (item.idUsuario == item2.idUsuario)
                                {
                                    @item2.nombreCompleto
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.idPedido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.idProducto)
                        </td>
                        <td>
                            @foreach (var item2 in productos)
                            {
                                if (item.idProducto == item2.idProducto)
                                {
                                    @* @item2.descripcionProducto *@
                                    @($"{item2.nombreProducto} {item2.descripcionProducto}")
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.montoTotal)
                        </td>
                        @* <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td> *@
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <br />
        <h1 class="text-center">No tienes artículos en el carrito.</h1>
    }



