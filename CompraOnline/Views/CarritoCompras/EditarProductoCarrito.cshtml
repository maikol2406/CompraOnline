@model CompraOnline.Models.CarritoCompras.CarritoCompra

@{
    ViewData["Title"] = "Editar Producto en Carrito";
    CompraOnline.Models.Productos.Producto producto = ViewBag.producto;
}

<h1 class="text-primary text-center mb-4">@ViewData["Title"]</h1>

<section class="card shadow-sm p-4">
    <h4 class="text-secondary">Detalles del Producto</h4>
    <hr />
    <section class="row justify-content-center">
        <section class="col-lg-6 col-md-8 col-sm-12">
            <form asp-action="EditarProductoCarrito">
                @if (!ViewData.ModelState.IsValid)
                {
                    <section asp-validation-summary="ModelOnly" class="alert alert-danger"></section>
                }

                <section class="text-center mb-4">
                    <img src="@producto.imagen" alt="@producto.nombreProducto" class="img-fluid rounded" style="max-height: 300px; object-fit: contain; border: 1px solid #ddd; padding: 10px;">
                </section>
                <section>
                    <label class="form-label fw-bold">Nombre del producto</label>
                    <input class="form-control" value="@producto.nombreProducto" readonly/>
                </section>

                <input asp-for="idCarrito" class="form-control" type="hidden" />
                <input asp-for="idUsuario" class="form-control" type="hidden" />
                <input asp-for="idPedido" class="form-control" type="hidden" />
                <input asp-for="idProducto" class="form-control" type="hidden" />

                <section class="mb-3">
                    <label asp-for="cantidad" class="form-label fw-bold">Cantidad</label>
                    <input asp-for="cantidad" class="form-control" />
                    <span asp-validation-for="cantidad" class="text-danger"></span>
                </section>

                <input asp-for="montoTotal" class="form-control" type="hidden" />

                <section class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Actualizar
                    </button>
                    <a asp-action="VerCarrito" asp-controller="CarritoCompras" class="btn btn-danger">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                </section>
            </form>
        </section>
    </section>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
