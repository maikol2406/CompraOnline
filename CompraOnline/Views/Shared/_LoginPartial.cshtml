@using Microsoft.AspNetCore.Identity
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">
                <i class="bi bi-person-circle"></i> Hola @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success m-2" asp-area="" asp-controller="Usuarios" asp-action="CambiarContrasena" asp-route-idUsuario=@User.FindFirst("idUsuario")?.Value title="Change Password">
                <i class="bi bi-key"></i> Cambiar mi contraseña
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Usuarios" asp-area="" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark btn-danger m-2">
                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-info m-2" asp-area="" asp-controller="Usuarios" asp-action="Registro" title="Register">
                <i class="bi bi-person-plus"></i> Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary m-2" asp-area="" asp-controller="Usuarios" asp-action="Login" title="Login">
                <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
            </a>
        </li>
    }
</ul>
