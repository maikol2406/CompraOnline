@model CompraOnline.Models.Productos.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<section class="container mt-4">
    <section class="row justify-content-center">
        <section class="col-md-8">
            <h1 class="text-center mb-4">
                <i class="bi bi-pencil-square"></i> Crear Producto
            </h1>

            <h4>Ingrese los detalles del producto</h4>
            <hr />

            <form asp-action="CrearProducto">
                @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                {
                    <section asp-validation-summary="ModelOnly" class="text-danger mb-3"></section>
                }

                <section class="form-group mb-3">
                    <label asp-for="imagen" class="form-label"></label>
                    <input asp-for="imagen" class="form-control" placeholder="URL de la imagen" />
                    <span asp-validation-for="imagen" class="text-danger"></span>
                </section>

                <section class="form-group mb-3">
                    <label asp-for="nombreProducto" class="form-label"></label>
                    <input asp-for="nombreProducto" class="form-control" placeholder="Nombre del producto" />
                    <span asp-validation-for="nombreProducto" class="text-danger"></span>
                </section>

                <section class="form-group mb-3">
                    <label asp-for="descripcionProducto" class="form-label"></label>
                    <textarea asp-for="descripcionProducto" class="form-control" rows="3" placeholder="Descripción del producto"></textarea>
                    <span asp-validation-for="descripcionProducto" class="text-danger"></span>
                </section>

                <section class="form-group mb-3">
                    <label asp-for="precio" class="form-label"></label>
                    <input asp-for="precio" class="form-control" type="number" step="0.01" placeholder="Precio" />
                    <span asp-validation-for="precio" class="text-danger"></span>
                </section>

                <section class="form-group mb-3">
                    <label asp-for="precioPromo" class="form-label"></label>
                    <input asp-for="precioPromo" class="form-control" type="number" step="0.01" placeholder="Precio Promocional" />
                    <span asp-validation-for="precioPromo" class="text-danger"></span>
                </section>

                <section class="form-group mb-3">
                    <label asp-for="stock" class="form-label"></label>
                    <input asp-for="stock" class="form-control" type="number" placeholder="Cantidad en stock" />
                    <span asp-validation-for="stock" class="text-danger"></span>
                </section>

                <section class="form-group mb-3">
                    <label asp-for="idCategoria" class="form-label"></label>
                    <select asp-for="idCategoria" class="form-select" asp-items="ViewBag.Categorias">
                        <option value="">Seleccione una categoría</option>
                    </select>
                    <span asp-validation-for="idCategoria" class="text-danger"></span>
                </section>

                <section class="form-group form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="promocion" />
                    <label class="form-check-label" for="promocion">
                        @Html.DisplayNameFor(model => model.promocion)
                    </label>
                </section>

                <section class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle"></i> Crear Producto
                    </button>
                </section>
            </form>

            <section class="text-center mt-3">
                <a asp-action="productosXCategoria" class="btn btn-danger btn-sm">
                    <i class="bi bi-arrow-left-circle"></i> Regresar a la lista
                </a>
            </section>
        </section>
    </section>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
